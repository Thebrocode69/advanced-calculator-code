print("select an operation ")
print("1. add ")
print("2. subtract ")
print("3. multiply ")
print("4. divide ")
print("5. exponents")

operation = input()

if operation == "1":
  num1 = input("Choose your first number? ")
  num2 = input("Choose your second number? ")
  print(float(num1) + float(num2))
elif operation == "2":
  num1 = input("Choose your first number? ")
  num2 = input("Choose your second number? ")
  print(float(num1) - float(num2))
elif operation == "3":
  num1 = input("Choose your first number? ")
  num2 = input("Choose your second number? ")
  print(float(num1) * float(num2))
elif operation == "4":
  num1 = input("Choose your first number? ")
  num2 = input("Choose your second number? ")
  if num2 == "0":
    print("undefined")
  else:
    print(float(num1) / float(num2))
elif operation == "5":
  num1 = input("Choose your first number? ")
  num2 = input("Choose your second number? ")
  print(float(num1) ** float(num2))
else:
  print("invalid entry")
             
